{
    "compilerOptions": {
        /* Basic Options */
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext"],
        /* Strict Type-Checking Options */
        "strict": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        /* Advanced Options */
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        /* Basic Options */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react"
    },
    "include": ["./src"]
}
